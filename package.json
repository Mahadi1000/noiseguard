{
  "name": "ainoiceguard",
  "version": "0.1.0",
  "description": "Real-time noise cancellation desktop app (Krisp-inspired)",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:native": "powershell -ExecutionPolicy Bypass -File ./scripts/build-native.ps1",
    "rebuild:electron": "electron-rebuild -f -w ainoiceguard",
    "dist": "electron-builder --win --x64",
    "dist:full": "npm run build:native && npm run rebuild:electron && npm run dist"
  },
  "keywords": [
    "noise-cancellation",
    "rnnoise",
    "electron",
    "portaudio",
    "wasapi"
  ],
  "author": "Ainoiceguard",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "node-gyp": "^12.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "build": {
    "appId": "com.ainoiceguard.app",
    "productName": "Ainoiceguard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "build/Release/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "build/Release/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ainoiceguard",
      "uninstallDisplayName": "Ainoiceguard"
    }
  }
}
