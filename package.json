{
  "name": "ainoiceguard",
  "version": "0.1.0",
  "description": "Real-time noise cancellation desktop app (Krisp-inspired)",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:native": "powershell -ExecutionPolicy Bypass -File ./scripts/build-native.ps1",
    "build:native:unix": "bash ./scripts/build-native-linux.sh",
    "rebuild:electron": "electron-rebuild -f -w ainoiceguard",
    "dist": "npm run dist:all",
    "dist:win": "electron-builder --win --x64 --config.directories.output=dist/win",
    "dist:linux": "electron-builder --linux AppImage deb tar.gz --x64 --config.directories.output=dist/linux",
    "dist:mac": "electron-builder --mac dmg zip --x64 --arm64 --config.directories.output=dist/mac",
    "dist:all": "node ./scripts/dist-all.js",
    "dist:full": "npm run build:native && npm run rebuild:electron && npm run dist:win",
    "dist:full:unix": "npm run build:native:unix && npm run rebuild:electron && npm run dist:linux",
    "dist:full:mac": "npm run build:native:unix && npm run rebuild:electron && npm run dist:mac",
    "test": "node --test test/**/*.test.js",
    "test:ci": "npm run test",
    "check:package": "node -e \"JSON.parse(require('fs').readFileSync('package.json','utf8')); console.log('package.json OK')\""
  },
  "keywords": [
    "noise-cancellation",
    "rnnoise",
    "electron",
    "portaudio",
    "wasapi"
  ],
  "author": "Ainoiceguard",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "node-gyp": "^12.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "build": {
    "appId": "com.ainoiceguard.app",
    "productName": "Ainoiceguard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "build/Release/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "build/Release/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "linux": {
      "category": "Audio",
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ainoiceguard",
      "uninstallDisplayName": "Ainoiceguard"
    }
  }
}
